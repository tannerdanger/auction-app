package tests;

import static org.junit.Assert.*;

import java.math.BigDecimal;
import java.time.LocalDateTime;

import org.junit.Before;
import org.junit.Test;

import auctiondata.Auction;
import auctiondata.AuctionItem;
import users.ContactPerson;

/**
 * 
 * @author gurchetan
 *
 */

public class ContactPersonTest {
	
	ContactPerson aContactPerson;
	Auction myPastAuction;
	Auction myPresentAuction;
	Auction myFutureAuction;
	LocalDateTime myPastDate =     LocalDateTime.of(2018, 05, 01, 0,0) ;
	LocalDateTime myPresentDate =  LocalDateTime.of(2018, 05, 07, 0,0) ;
	LocalDateTime myFutureDate =   LocalDateTime.of(2018, 05, 25, 0,0) ;
	private static final int AUCTIONID = 12345;
	
	/**
	 * 
	 * @throws Exception
	 */
	@Before
	public void setup() throws Exception {
		
		aContactPerson = new ContactPerson("John", "Doe", "johndoe@contact.com");
		aContactPerson.setMyOrgName("UWTacoma");
//		myPastAuction = new Auction("UWTacoma", AUCTIONID,  myPastDate, null);
//		myPresentAuction = new Auction("UWTacoma",AUCTIONID,  myPresentDate, null);
//		myFutureAuction = new Auction("UWTacoma", AUCTIONID,  myFutureDate, null);
	}
	
	
	@Test
	public void displaySubmittedAuctions_auctionDateIsInPast() {
		aContactPerson.createNewAuction(myPastDate);
		aContactPerson.addInventoryItem("Cookie-Jar", new BigDecimal(15.0));
		aContactPerson.displaySubmittedAuctions();
	}
	
	@Test
	public void displaySubmittedAuctions_auctionDateIsToday() {
		aContactPerson.createNewAuction(myPresentDate);
		aContactPerson.addInventoryItem("Rubik Cube", new BigDecimal(20.0));
		aContactPerson.displaySubmittedAuctions();
	}
	
	@Test
	public void displaySubmittedAuctions_auctionDateIsInTheFuture() {
		aContactPerson.createNewAuction(myFutureDate);
		aContactPerson.addInventoryItem("Graphics Card", new BigDecimal(250.0));
		aContactPerson.displaySubmittedAuctions();
	}

}
